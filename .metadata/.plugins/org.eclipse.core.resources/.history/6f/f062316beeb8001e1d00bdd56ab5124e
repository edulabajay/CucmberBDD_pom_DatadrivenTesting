package com_stepdefinition;

import org.openqa.selenium.By;

import com_BasePage_ERP.Basepage_erp;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class ERP_Stepdefinition extends Basepage_erp {

	@Given("user should be on the login page")
	public void user_should_be_on_the_login_page() {
	    // Implementation for navigating to the login page
	}

	@When("User enters \"(.*)\" and \"(.*)\"$")
	public void user_enters_username_and_password(String username, String password) {
	    driver.findElement(By.name("email")).sendKeys(username);
	    driver.findElement(By.name("password")).sendKeys(password);
	}

	@And("User clicks on the login button")
	public void user_clicks_on_the_login_button() {
	    driver.findElement(By.xpath("//div[@class='ui fluid large blue submit button']")).click();
	}

	@Then("User should be on the homepage")
	public void user_should_be_on_the_homepage() {
	    // Implementation for verifying if the user is on the homepage
	}

	@And("User clicks on the create contact button")
	public void user_clicks_on_the_create_contact_button() {
	    // Implementation for clicking on the create contact button
	}

	@And("User enters \"(.*)\", \"(.*)\", \"(.*)\", and \"(.*)\"")
	public void user_enters_contact_details(String firstName, String middleName, String lastName, String companyName) {
	    // Implementation for entering contact details
	}



}
